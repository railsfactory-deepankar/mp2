require '../lib/todo.rb'
require 'test/unit'


class Testtodo < Test::Unit::TestCase
	
       def setup
	  @t = Todolist.new("deep.txt")
       end
 
     def teardown
       @t=nil
     end
   
	def test_zempty
	    @t.empty
	    assert_equal 0,@t.pending.size
	    assert_equal 0,@t.completed.size
	    assert_equal 0,@t.list.size
	end

    
        def test_add1
	   @t.empty
	   @t.add("sleep")
	   assert_equal 1,@t.list.size
	   assert_equal 1,@t.pending.size
	   assert_equal 0,@t.completed.size
	 end



	def test_add2
	   @t.empty
	   @t.add("sleep")
	   @t.add("wakeup")
	   assert_equal 2,@t.list.size
	   assert_equal 2,@t.pending.size
	   assert_equal 0,@t.completed.size
	end

	def test_complete
		
		# precondition
		@t.empty
		@t.add("sleep #undone")
                @t.add("wakeup #undone")
		#before state
		assert_equal 2,@t.pending.size
		assert_equal 0,@t.completed.size
		assert_equal 2,@t.list.size


		#action
		   @t.complete(1)

		#after 
		assert_equal 1,@t.pending.size
		assert_equal 1,@t.completed.size
		assert_equal 2,@t.list.size
	end



	def test_delete

		 # precondition
		 @t.empty
		 @t.add("sleep #undone")
		 @t.complete(1)

		 
		 #before state
		 assert_equal 0,@t.pending.size
		 assert_equal 1,@t.completed.size
		 assert_equal 1,@t.list.size

		#action
		 @t.delete(1)
	 
		 #after
		 assert_equal 0,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 0,@t.list.size
	 end


	 def test_modify
		 # precondition
		 @t.empty
		 @t.add("sleep")
		 @t.add("wakeup")
	       
		 #before state
		 assert_equal 2,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 2,@t.list.size

		#action
		 @t.modify(1,"play")
	 
		 #after
		 assert_equal 2,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 2,@t.list.size
	end

	 def test_show_pending
		 # precondition
		 @t.empty
		 @t.add("sleep")
		 @t.add("wakeup")
	       
		 #before state
		 assert_equal 2,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 2,@t.list.size

		#action
		 @t.show_pending(1)
	 
		 #after
		 assert_equal 2,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 2,@t.list.size
                 assert_equal "one",@t.show_pending(1)
                 
	end

	 def test_show_complete
		 # precondition
		 @t.empty
		 @t.add("sleep #undone")
		 @t.add("wakeup #undone")
                 @t.add("brush #undone")
	       
		 #before state
		 assert_equal 3,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 3,@t.list.size

		#action
		 @t.complete(1)    
                @t.save       
		 #after
		 assert_equal 2,@t.pending.size
		 assert_equal 1,@t.completed.size
		 assert_equal 3,@t.list.size
                 assert_equal "sleep #done",@t.show_completed(1) 
                 
	end
	 def test_storage
		 # precondition
		 @t.empty
		 @t.add("sleep #undone")
		 @t.add("wakeup #undone")
                 @t.add("play #undone")
	       
		 #before state
		 assert_equal 3,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 3,@t.list.size
                 
                 #action
                  @t.complete(1)
                  @t.save
                 #after saving   
                 assert_equal 2,@t.pending.size
		 assert_equal 1,@t.completed.size
		 assert_equal 3,@t.list.size
                 assert_equal "sleep #done",@t.show_completed(1) 
                 
                 #deleting the elements of array
                 @t.empty
                 assert_equal 0,@t.pending.size
		 assert_equal 0,@t.completed.size
		 assert_equal 0,@t.list.size
                 
                 # calling load function
                 @t.load1
                 #after loading
                 assert_equal 2,@t.pending.size
		 assert_equal 1,@t.completed.size
		 assert_equal 3,@t.list.size
      end
               
end
 

