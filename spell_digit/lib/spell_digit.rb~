class Roman
 NUMS = {
  1 => 'one',
  2 => 'two',
  3 => 'three',
  4 => 'four',
  5 => 'five',
  6 => 'six',
  7 => 'seven',
  8 => 'eight',
  9 => 'nine',
  10 => 'ten',
  11 => 'eleven',
  12 => 'twelve',
  13 => 'thirteen',
  14 => 'fourteen',
  15 => 'fifteen',
  16 => 'sixteen',
  17 => 'seventeen',
  18 => 'eighteen',
  19 => 'nineteen',
  20 => 'twenty',
  30 => 'thirty',
  40 => 'forty',
  50 => 'fifty',
  60 => 'sixty',
  70 => 'seventy',
  80 => 'eighty',
  90 => 'ninety',
  100 => 'hundred',
  1000 => 'thousand',
  1000000 => 'million',
  1000000000 => 'billion'
}


  def self.convert(number)
c1 = 0   
c2 = 0
c3 = 0
c4 = 0
n = number
while n > 1000
	c1 = n / 1000
	n = n % 1000
end
while n > 100
	c2 = n / 100
	n = n % 100
end
while n > 10
	c3 = n / 10
	n = n % 10
end
c4 = n
puts Nums[c1] + "Thousand" + Nums[c2] + "Hundread" + Nums[c3] + Nums[c4]end
end 

